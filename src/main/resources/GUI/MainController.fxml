<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" >
<children>
    <TableView fx:id="patientListView" layoutX="-5.0" layoutY="165.0" prefHeight="255.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <columns>
            <TableColumn prefWidth="155.0" text="First Name" />
            <TableColumn prefWidth="157.0" text="Last Name" />
            <TableColumn prefWidth="155.0" text="Social Security Number" />
        </columns>
    </TableView>
    <MenuBar layoutX="-4.0" layoutY="2.0" prefHeight="27.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem mnemonicParsing="false" text="Import from .CSV..." />
                    <MenuItem mnemonicParsing="false" text="Export to CSV ..." />
                    <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#exitApp" text="Exit" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <items>
                    <MenuItem mnemonicParsing="false" text="Add new patient" />
                    <MenuItem mnemonicParsing="false" text="Edit selected patient" />
                    <MenuItem mnemonicParsing="false" text="Remove selected patient" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <ImageView fx:id="addPatientImage" fitHeight="119.0" fitWidth="156.0" layoutY="27.0" onMouseClicked="#addPatient" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="0.0">
         <image>
            <Image url="@../Images/addPatient.png" />
         </image></ImageView>
    <ImageView fx:id="editPatientImage" fitHeight="119.0" fitWidth="119.0" layoutX="156.0" layoutY="27.0" onMouseClicked="#editPatient" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/editPatient.png" />
         </image></ImageView>
    <ImageView fx:id="removePatientImage" fitHeight="119.0" fitWidth="156.0" layoutX="275.0" layoutY="27.0" onMouseClicked="#removePatient" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/removePatient.png" />
         </image></ImageView>
</children>
</AnchorPane>
